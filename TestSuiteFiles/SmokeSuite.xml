<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Rest Smoke Suite" verbose="1" >
    <test name="Get Posts" >
        <parameter name="Method" value="Get"/>
        <parameter name="baseURL" value="/posts"/>
        <classes>
            <class name="com.api.test.apivalidation" />
        </classes>
    </test>

    <test name="Post Posts" >
        <parameter name="Method" value="Post"/>
        <parameter name="baseURL" value="/posts"/>
        <classes>
            <class name="com.api.test.apivalidation" />
        </classes>
    </test>
</suite>
